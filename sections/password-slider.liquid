<style>
    /* CSS für den Fullscreen Slider */
    .password-slider-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: -1; /* Hinter dem Hauptinhalt */
        background-color: #000;
    }

    .password-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 1.5s ease-in-out; /* Weiche Überblendung */
    }

    .password-slide.active {
        opacity: 1;
        z-index: 1;
    }

    .password-slide-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.6); /* Bild etwas abdunkeln, damit der Text lesbar bleibt */
    }

    /* Optional: Text-Overlay auf dem Slider */
    .slide-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        max-width: 80%;
        z-index: 2;
    }

    .slide-text h2 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }
    .slide-text p {
        font-size: 1.25rem;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.5);
    }

    @media (max-width: 768px) {
        .slide-text h2 {
            font-size: 1.5rem;
        }
        .slide-text p {
            font-size: 1rem;
        }
    }
</style>

<div class="password-slider-container" id="PasswordSlider">
    {% for block in section.blocks %}
        <div
                class="password-slide"
                data-slide-index="{{ forloop.index0 }}"
                {{ block.shopify_attributes }}
        >
            {% if block.settings.image != blank %}
                {{ block.settings.image | image_url: width: 2000 | image_tag:
                loading: 'lazy',
                class: 'password-slide-image',
                alt: block.settings.heading | escape
                }}
            {% else %}
                <div class="password-slide-image" style="background-color: #333; height: 100%;" role="img" aria-label="Platzhalter für Hintergrundbild"></div>
            {% endif %}

            {% if block.settings.heading != blank or block.settings.text != blank %}
                <div class="slide-overlay">
                    <div class="slide-text">
                        {% if block.settings.heading != blank %}
                            <h2>{{ block.settings.heading }}</h2>
                        {% endif %}
                        {% if block.settings.text != blank %}
                            {{ block.settings.text }}
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const sliderContainer = document.getElementById('PasswordSlider');
        // Stelle sicher, dass der Container existiert und Blöcke hat
        if (!sliderContainer) return;

        const slides = sliderContainer.querySelectorAll('.password-slide');
        const slideCount = slides.length;

        if (slideCount === 0) return;

        let currentSlide = 0;
        // Geschwindigkeits-Einstellung aus dem Schema holen
        const intervalTime = parseInt('{{ section.settings.autoplay_speed | default: 5 }}') * 1000;
        const autoplay = '{{ section.settings.autoplay | default: true }}' === 'true';

        function showSlide(index) {
            slides.forEach((slide, i) => {
                slide.classList.remove('active');
                // Z-Index nur für die aktive Folie erhöhen
                slide.style.zIndex = (i === index) ? '1' : '0';
            });
            slides[index].classList.add('active');
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % slideCount;
            showSlide(currentSlide);
        }

        // Zeige die erste Folie beim Laden
        showSlide(currentSlide);

        // Autoplay starten
        if (autoplay && slideCount > 1) {
            // Speichern des Intervall-IDs, falls benötigt (z.B. für stop/start)
            window.passwordSliderInterval = setInterval(nextSlide, intervalTime);
        }
    });

    // Anpassung für den Shopify Theme Editor (Hot Reload)
    if (Shopify.designMode) {
        document.addEventListener('shopify:section:load', function(event) {
            if (event.detail.sectionId === '{{ section.id }}') {
                const sliderContainer = event.target.querySelector('#PasswordSlider');
                if (sliderContainer) {
                    // Re-initialisieren der JS-Logik für den Slider nach dem Laden im Editor
                    const slides = sliderContainer.querySelectorAll('.password-slide');
                    if (slides.length > 0) {
                        slides.forEach(slide => slide.classList.remove('active'));
                        slides[0].classList.add('active');
                    }
                    // Autoplay wird durch Neuladen der Seite im Editor automatisch neu gestartet
                }
            }
        });
        // Entfernen des alten Intervalls, wenn die Sektion entladen wird (falls man die Sektion im Editor löscht)
        document.addEventListener('shopify:section:unload', function(event) {
            if (event.detail.sectionId === '{{ section.id }}' && window.passwordSliderInterval) {
                clearInterval(window.passwordSliderInterval);
            }
        });
    }
</script>


{% schema %}
{
  "name": "Password Slider",
  "tag": "section",
  "class": "password-slider-section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay aktivieren",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "Sek.",
      "label": "Autoplay-Geschwindigkeit",
      "default": 5
    },
    {
      "type": "paragraph",
      "content": "Fügen Sie mindestens zwei Slides hinzu, damit der Slider funktioniert."
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Hintergrundbild"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Überschrift",
          "default": "Bald wieder für Sie da."
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Wir arbeiten an einem aufregenden neuen Shop-Erlebnis!</p>"
        }
      ]
    }
  ]
}
{% endschema %}